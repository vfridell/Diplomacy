<Window x:Class="GameExplorer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameExplorer"
        xmlns:diplomacyWpf="clr-namespace:DiplomacyWpfControls;assembly=DiplomacyWpfControls"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*"></ColumnDefinition>
            <ColumnDefinition Width="3*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <diplomacyWpf:BoardViewer Name="BoardViewer" Grid.Column="0"></diplomacyWpf:BoardViewer>
        <diplomacyWpf:AllianceScenarioGraphControl Name="AllianceScenarioGraphControl" Grid.Column="1"></diplomacyWpf:AllianceScenarioGraphControl>
    </Grid>
</Window>
